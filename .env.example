# YouTube Video Automation Configuration
# Copy this file to .env and fill in your actual API keys

# OpenAI API Key for ChatGPT script generation
OPENAI_API_KEY=your_openai_api_key_here

# YouTube API credentials (for future video upload features)
YOUTUBE_CLIENT_ID=your_youtube_client_id
YOUTUBE_CLIENT_SECRET=your_youtube_client_secret

# Default script generation settings
DEFAULT_VIDEO_LENGTH=5-10 minutes
DEFAULT_STYLE=educational
DEFAULT_AUDIENCE=general

# Output settings
SCRIPTS_FOLDER=scripts
OUTPUT_FORMAT=both  # json, txt, or both
